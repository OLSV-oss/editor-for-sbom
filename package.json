{
	"name": "editor-for-sbom",
	"displayName": "Editor for SBOM",
	"publisher": "olsv-oss",
	"description": "This is language support for spdx tag-value file.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.75.0"
	},
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"sbom",
		"spdx"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/OLSV-oss/editor-for-sbom"
	},
	"license": "MIT",
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "spdx-tag-value",
				"aliases": [
					"SPDX Tag-Value"
				],
				"extensions": [
					".spdx"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "spdx-tag-value",
				"scopeName": "source.spdx",
				"path": "./syntaxes/spdx.tmLanguage.json"
			}
		],
		"themes": [
			{
				"label": "spdx tag value theme",
				"uiTheme": "vs-dark",
				"path": "./themes/spdx-color-theme.json"
			}
		],
		"snippets": [
			{
				"language": "spdx-tag-value",
				"path": "./snippets.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx --fix",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"pretest": "npm run compile && npm run lint",
		"test": "cd server && npm run test && cd .."
	},
	"devDependencies": {
		"@types/vscode": "^1.75.0",
		"@types/glob": "^7.2.0",
		"@types/node": "18.7.9",
		"@typescript-eslint/eslint-plugin": "^5.33.1",
		"@typescript-eslint/parser": "^5.33.1",
		"@types/jest": "^28.1.7",
		"jest": "^28.1.3",
		"ts-jest": "^28.0.8",
		"eslint": "^8.22.0",
		"glob": "^8.0.3",
		"typescript": "^4.7.4"
	},
	"private": true
}
